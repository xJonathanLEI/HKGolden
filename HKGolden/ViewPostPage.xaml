<Page
    x:Class="HKGolden.ViewPostPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HKGolden"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Loading="Page_Loading">
    <RelativePanel Background="#FF222222">
        <TextBlock Name="txtTitle" Foreground="#AAFFAA" Text="TITLE" Margin="5" FontSize="20" />
        <ScrollViewer HorizontalAlignment="Stretch" RelativePanel.Below="txtTitle" Name="SV" ViewChanged="SV_ViewChanged" ViewChanging="SV_ViewChanging">
            <StackPanel Name="SP" HorizontalAlignment="Stretch">
            </StackPanel>
        </ScrollViewer>
    </RelativePanel>
</Page>
